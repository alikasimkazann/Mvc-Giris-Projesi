@using Stok_Proje.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Tbl_Kategoriler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>Kategoriler</h2>

@if (TempData["AlertMessage"] != null)
{
    <div class="alert alert-success">
        <strong>Başarılı !</strong> @TempData["AlertMessage"]
    </div>
}

<table class="table table-bordered" style="margin-top:25px">
    <tr>
        <th>ID</th>
        <th>Kategori Adı</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>
    <tbody>
        @foreach (var ktgr in Model)
        {
            <tr>
                <td>@ktgr.KATEGORIID</td>
                <td>@ktgr.KATEGORIAD</td>
                <td><a href="/Kategori/KategoriGuncelle/@ktgr.KATEGORIID" class="btn btn-success">Güncelle</a></td>
                <td><a href="/Kategori/KategoriSil/@ktgr.KATEGORIID" class="btn btn-danger">Sil</a></td>
            </tr>
        }
    </tbody>
</table>

@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa }))

<a href="/Kategori/YeniKategori/" class="btn btn-primary">Yeni Kategori Ekle</a>

